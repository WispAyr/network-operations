# NetOps Configuration

# Database
DATABASE_URL=sqlite:./data/netops.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/netops

# Server
PORT=3000
HOST=localhost

# ZeroTier Central API
ZEROTIER_API_TOKEN=your_zerotier_api_token_here
ZEROTIER_API_URL=https://api.zerotier.com/api/v1

# UniFi Network Controller
# 
# Modes:
#   - 'local': Official Site Manager API v1.0 via direct UDM IP (recommended)
#   - 'sitemanager': Official Site Manager API v1.0 via api.ui.com cloud
#   - 'legacy': Cookie-based authentication (original method)
#
UNIFI_MODE=local

# For 'local' or 'sitemanager' mode: API key from UDM Integrations page
UNIFI_API_KEY=your_api_key_here
# UDM IP for local mode
UNIFI_UDM_IP=192.168.1.1
# Console ID for cloud (sitemanager) mode
# UNIFI_CONSOLE_ID=your-console-id-from-ui-com

# For 'legacy' mode: Cookie-based authentication
UNIFI_CONTROLLER_URL=https://192.168.1.1
UNIFI_USERNAME=admin
UNIFI_PASSWORD=your_password_here

# UISP
UISP_URL=https://your-uisp-hostname
UISP_API_TOKEN=your_uisp_api_token_here

# Optional: Additional Platforms (for future use)
# TAILSCALE_API_KEY=
# CLOUDFLARE_API_TOKEN=
# CLOUDFLARE_ACCOUNT_ID=
